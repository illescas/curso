<p id="notice"><%= notice %></p>

<h1>Listing Pins</h1>

<table>
	<thead>
		<tr>
			<th>Photo</th>
			<th>Description</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @pins.each do |pin| %>
		<tr>
			<td><%= pin.name  %></td>
			<td><%= image_tag (pin.photo) %></td>
			<td><%= pin.description %></td>
			<td><%= link_to 'Ver', pin %></td>
			<% if user_signed_in? %>
			<td><%= link_to 'Editar', edit_pin_path(pin) %></td>
			<% end %>
			<% if user_signed_in? %>
			<td><%= link_to 'Eliminar', pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			<% end %>
		</tr>
		<% end %>
	</tbody>
</table>

<br>
<% if user_signed_in? %>
<%= link_to 'New Pin', new_pin_path %>
<% end %>


